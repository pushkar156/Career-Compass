rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Users can only read and write their own profile document.
    match /users/{userId} {
      allow read, write: if isOwner(userId);

      // This single rule allows an authenticated user to perform all necessary actions
      // on their own history subcollection and the documents within it.
      // A user must be able to read their own profile to access subcollections.
      match /history/{historyId} {
        allow list, read, write, create: if isOwner(userId);
      }
    }

    // Users can only manage metadata for their own files.
    match /users/{userId}/files/{fileId} {
      allow read, write: if isOwner(userId);
    }
  }
}