rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Users can only read, write, and delete their own files.
    // The path structure must match /users/{userId}/files/{filename}.
    match /users/{userId}/files/{allPaths=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Deny all other access to prevent unauthorized uploads/downloads.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
